<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_sky"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@mipmap/default_theme_sky" />

        <RelativeLayout

            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/default_sea_water"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/default_sea_water"

                />
            <RelativeLayout
                android:id="@+id/fl_bottle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >


            </RelativeLayout>
            <View
                android:id="@+id/startView"
                android:layout_width="0.01dp"
                android:layout_below="@id/default_sea_water"
                android:layout_centerInParent="true"
                android:layout_height="0.01dp"></View>




        </RelativeLayout>



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_date"
        android:gravity="center"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_land"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/land2"

            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/love_selector"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/iv_land"
            android:layout_alignBottom="@+id/iv_land"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@null"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/tree1"
            android:id="@+id/tree1"
            android:layout_alignLeft="@+id/iv_land"
            android:layout_alignBottom="@+id/iv_land"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="11dp"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/phonebooth"
            android:layout_toRightOf="@+id/tree1"
            android:id="@+id/phonebooth"
            android:layout_alignBottom="@+id/tree1"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/tree2"
            android:layout_toRightOf="@+id/phonebooth"
            android:layout_alignBottom="@+id/phonebooth"
            />
        <ImageView
            android:id="@+id/endView"
            android:layout_toLeftOf="@+id/iv_land"
            android:layout_marginRight="8dp"
            android:layout_width="0.01dp"
            android:layout_alignBottom="@+id/iv_land"
            android:layout_height="0.01dp"></ImageView>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_below="@id/rl_date"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="00:53"
                android:textColor="@color/bg_white"
                />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
