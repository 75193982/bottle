<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:kevin="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bottle.com.bottle.activity.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <com.kevin.tabindicator.TabPageIndicatorEx
            android:id="@+id/tabpage_act_tpi"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/tabbg"
            kevin:tabIcons="@array/bottom_bar_icons"
            kevin:tabItemPadding="3dp"
            kevin:tabLabels="@array/bottom_bar_labels"
            kevin:tabSelectedColor="#00BFFF"
            kevin:tabTextSize="10sp"
            kevin:tabUnselectedColor="#555555" />
    </FrameLayout>

</LinearLayout>
