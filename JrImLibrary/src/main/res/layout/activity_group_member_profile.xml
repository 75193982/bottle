<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.jerei.im.timchat.ui.GroupMemberProfileActivity">
    <com.jerei.im.ui.TemplateTitle
        android:id="@+id/GroupMemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:titleText="@string/group_member_profile" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.jerei.im.ui.RoundCornerImageView
            android:id="@+id/headimage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/head_other"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="20dp"
        android:background="@color/line" />

    <com.jerei.im.ui.LineControllerView
        android:id="@+id/manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:linecontrollerview_name="@string/group_member_manage"
        android:visibility="gone"
        app:isSwitch="true" />
    <com.jerei.im.ui.LineControllerView
        android:id="@+id/setQuiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:linecontrollerview_name="@string/group_member_quiet"
        android:visibility="gone"
        app:canNav="true"/>
    <com.jerei.im.ui.LineControllerView
        android:id="@+id/groupCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isBottom="true"
        app:linecontrollerview_name="@string/group_member_card" />



    <TextView
        android:id="@+id/kick"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="18sp"
        android:background="@drawable/bg_negative_btn"
        android:textColor="@color/text_btn"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/group_member_del"/>

</LinearLayout>
